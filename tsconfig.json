{
	"compilerOptions": {
		"strict": true,
		"target": "ES2019",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"lib": ["ES2019"],
		"esModuleInterop": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"moduleDetection": "force",
		"isolatedModules": true,
		"removeComments": true,
		// TODO: turn it on
		"noUncheckedIndexedAccess": false,
		"outDir": "dist",
		"sourceMap": false
	},
	"include": ["./lib/**/*.ts", "./tests/**/*.ts"]
}
