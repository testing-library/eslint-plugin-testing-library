{
	"compilerOptions": {
		"strict": true,
		"target": "ES2023",
		"module": "preserve",
		// "moduleResolution": "Bundler", <-- this is implied by "module": "preserve"
		"noEmit": true,
		"lib": ["ES2023"],
		"skipLibCheck": true,
		"isolatedModules": true,
		// TODO: turn it on
		"noUncheckedIndexedAccess": false
	}
}
